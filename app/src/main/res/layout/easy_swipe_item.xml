<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <com.yng.ming.myapplication.widget.swipe.EasySwipeMenuLayout
        android:id="@+id/easySwipeMenuLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentView="@+id/easyContentLayout"
        app:rightMenuView="@+id/deleteText">

        <LinearLayout
            android:id="@+id/easyContentLayout"
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <TextView
                android:id="@+id/easyContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="start|center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="不限"
                android:textColor="#333333"
                android:textSize="14sp"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/deleteText"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:background="#CCCCCC"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="删除"/>

    </com.yng.ming.myapplication.widget.swipe.EasySwipeMenuLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F2F0F5"/>

</LinearLayout>
