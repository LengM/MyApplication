<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <Button
                android:id="@+id/horizontalCheckButton"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginBottom="10dp"
                android:text="@string/horizontalCheckButton"/>

            <Button
                android:id="@+id/replaceLanguage"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginBottom="10dp"
                android:text="@string/replaceLanguage"/>

            <Button
                android:id="@+id/imgGridView"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginBottom="10dp"
                android:text="@string/imgGridView"/>

            <Button
                android:id="@+id/calendar"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginBottom="10dp"
                android:text="@string/calendar"/>

            <Button
                android:id="@+id/clearCache"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginBottom="10dp"
                android:text="@string/clearCache"/>

            <Button
                android:id="@+id/upShowAndEdit"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginBottom="10dp"
                android:text="@string/upShowAndEdit"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/downMenu"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginBottom="10dp"
                android:text="@string/downMenu"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/backLayout"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginBottom="10dp"
                android:text="@string/backLayout"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/badgeView"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginBottom="10dp"
                android:text="@string/badgeView"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/likeView"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginBottom="10dp"
                android:text="@string/likeView"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/refreshView"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginBottom="10dp"
                android:text="@string/refreshView"
                android:textAllCaps="false"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
